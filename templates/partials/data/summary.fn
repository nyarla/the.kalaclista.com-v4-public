{{- $content := . -}}

{{- if in $content "\n" -}}
  {{- $content = index (split ($content | plainify | replaceRE "^\\s+" "") "\n" ) 0 -}}
{{- end -}}

{{- if gt (len $content) 140 -}}
  {{- $content = (printf "%s・・・" (substr $content 0 140)) -}}
{{- end -}}

{{- $content -}}
