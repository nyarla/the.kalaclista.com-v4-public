{{- $page := . -}}

{{- $section := (default "home" (index (split $page.RelPermalink "/") 1)) -}}

{{- if eq $page.Kind "404" -}}
  {{- $section = "notfound" -}}
{{- else if and (ne $section "archives") (eq $page.Type "home") -}}
  {{- $section = "home" -}}
{{- end -}}

{{- $section -}}

